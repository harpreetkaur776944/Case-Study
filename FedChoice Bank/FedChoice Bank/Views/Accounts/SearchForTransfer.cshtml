@model FedChoice_Bank.Models.Account
@{
    ViewData["Title"] = "SearchForTransfer";
}


<h1>SearchAccountID</h1>
<div class="form-group">
    <form asp-controller="Accounts" asp-action="Transfer" method="get">
        <table class="tableDesignVeryShort" align="center">
            <tr>
                <td colspan="2" class="tdDesign"><h3 class="h3Design">Search</h3></td>
            </tr>
            <tr>

                <td><label class="control-label">Enter Account ID: </label></td>
                <td><input name="Id" type="text" class="form-control" /></td>
            </tr>
            <tr>
                <td class="tdButtonDesign" colspan="2">
                    <span class="form-group">
                        <input type="submit" value="Search" class="buttonDesign" />
                    </span>
                </td>
            </tr>
        </table>
    </form>
</div>



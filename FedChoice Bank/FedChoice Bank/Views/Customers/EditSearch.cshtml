
@{
    ViewData["Title"] = "EditSearch";
}

<h1>EditSearch</h1>

<div>
    <table align="center">
        <tr>
            <th><h3>Search</h3></th>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <form asp-controller="Customers" asp-action="Edit" method="get">
                        <p align="center">

                            Enter Customer ID: <input type="text" name="Id" /><input type="submit" value="Edit" />
                        </p>
                    </form>


                </div>
            </td>
        </tr>
        @ViewBag.ErrorMessage
        @ViewBag.message
    </table>
    <a asp-action="Index">Back to Customer Home</a>
</div>

@model IEnumerable<FedChoice_Bank.Models.Status>

@{
    ViewData["Title"] = "CustomerStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="h3Design">CustomerStatus</h3>

<table class="table">
    <thead class="trStatus">
        <tr class="trStatus">
            <th class="thStatus">
                @Html.DisplayNameFor(model => model.CustomerSsnid)
            </th>
            <th class="thStatus">
                @Html.DisplayNameFor(model => model.Status1)
            </th>
            <th class="thStatus">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th class="thStatus">
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            <th class="thStatus">Refresh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerSsnid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdated)
                </td>
                <td>
                    <input type="submit"  class="buttonDesign2" value="Refresh" name="Command" />
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).click(function () {
            $('input').click(function () {
                window.location.reload();
            });
        });
    </script>
}
@model FedChoice_Bank.Models.Customer
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<div>
    <table align="center">
        <tr>
            <th><h3>Search</h3></th>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    <form asp-controller="Customers" asp-action="Details" method="get">
                        <p align="center">

                            Enter Customer ID: <input type="text" name="Id" /><input type="submit" value="Search" />
                        </p>
                    </form>

                    OR

                    <form asp-controller="Customers" asp-action="DetailsSSN" method="get">
                        <p align="center">
                            Enter Customer SSNID: <input type="text" name="Id" /><input type="submit" value="Search" />

                        </p>



                    </form>

                </div>
            </td>
        </tr>
        @ViewBag.ErrorMessage
    </table>

    <a asp-action="Index">Back to Customer Home</a>
</div>



